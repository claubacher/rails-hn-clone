<!DOCTYPE html>
<html>
<head>
  <title>HnClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
  <%= link_to "Logout", session_path(session[:id]), :method => :delete %>
<% else %>
  <%= link_to "Login", new_session_path %>
<% end %>

<%= yield %>

</body>
</html>
